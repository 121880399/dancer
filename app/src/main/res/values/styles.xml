<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Theme_Dialog" parent="@android:style/Theme.Holo.DialogWhenLarge">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是悬浮还是覆盖 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 是否有系统自带标题栏 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 背景是否变暗 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 去除黑色背景 -->
        <item name="android:windowFullscreen">false</item>
        <!-- 设置全屏 -->
    </style>
    <!-- ScrollView 通用样式 match_parent weight 1 -->
    <style name="scrollview_fill">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:fillViewport">true</item>
        <item name="android:scrollbars">none</item>
    </style>
    <style name="neteasa_music_time_text_sytle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ccc</item>
        <item name="android:textSize">9sp</item>
    </style>
    <style name="Base.Widget.AppCompat.SeekBar" parent="android:Widget">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/abc_seekbar_track_material</item>
        <item name="android:indeterminateDrawable">@drawable/abc_seekbar_track_material</item>
        <item name="android:thumb">@drawable/abc_seekbar_thumb_material</item>
        <item name="android:focusable">true</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
    </style>
    <style name="neteasa_music_time_seek_bar_sytle"
        parent="Base.Widget.AppCompat.SeekBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:thumb">@drawable/ic_seekbar_thumb</item>
    </style>

    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/selector_checkbox</item>
    </style>




    <style name="alivc_info_seekbar" parent="@android:style/Widget.SeekBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:maxHeight">@dimen/alivc_info_seekbar_height</item>
        <item name="android:minHeight">@dimen/alivc_info_seekbar_height</item>
        <item name="android:paddingLeft">@dimen/alivc_info_seekbar_offset</item>
        <item name="android:paddingRight">@dimen/alivc_info_seekbar_offset</item>
        <item name="android:thumbOffset">@dimen/alivc_info_seekbar_offset</item>
    </style>

    <style name="alivc_info_seekbar_blue" parent="alivc_info_seekbar">
        <item name="android:progressDrawable">@drawable/alivc_info_seekbar_bg_blue</item>
        <item name="android:indeterminateDrawable">@drawable/alivc_info_seekbar_bg_blue</item>
        <item name="android:thumb">@drawable/alivc_seekbar_thumb_blue</item>
    </style>

    <style name="alivc_info_seekbar_green" parent="alivc_info_seekbar">
        <item name="android:progressDrawable">@drawable/alivc_info_seekbar_bg_green</item>
        <item name="android:indeterminateDrawable">@drawable/alivc_info_seekbar_bg_green</item>
        <item name="android:thumb">@drawable/alivc_info_seekbar_thumb_green</item>
    </style>

    <style name="alivc_info_seekbar_orange" parent="alivc_info_seekbar">
        <item name="android:progressDrawable">@drawable/alivc_info_seekbar_bg_orange</item>
        <item name="android:indeterminateDrawable">@drawable/alivc_info_seekbar_bg_orange</item>
        <item name="android:thumb">@drawable/alivc_info_seekbar_thumb_orange</item>
    </style>

    <style name="alivc_info_seekbar_red" parent="alivc_info_seekbar">
        <item name="android:progressDrawable">@drawable/alivc_info_seekbar_bg_red</item>
        <item name="android:indeterminateDrawable">@drawable/alivc_info_seekbar_bg_red</item>
        <item name="android:thumb">@drawable/alivc_info_seekbar_thumb_red</item>
    </style>

    <style name="alivc_info_seekbar_blue_voice" parent="alivc_info_seekbar">
        <item name="android:progressDrawable">@drawable/alivc_info_seekbar_bg_blue</item>
        <item name="android:indeterminateDrawable">@drawable/alivc_info_seekbar_bg_blue</item>
        <item name="android:thumb">@drawable/alivc_dialog_seek_thumb</item>
    </style>

    <style name="alivc_info_seekbar_blue_light" parent="alivc_info_seekbar">
        <item name="android:progressDrawable">@drawable/alivc_info_seekbar_bg_blue</item>
        <item name="android:indeterminateDrawable">@drawable/alivc_info_seekbar_bg_blue</item>
        <item name="android:thumb">@drawable/alivc_dialog_seek_thumb</item>
    </style>

    <style name="edit_line_style" parent="@android:style/Widget.EditText">
        <item name="android:padding">5dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/edit_round_bkg</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="edit_5line_style" parent="edit_line_style">
        <item name="android:maxLines">5</item>
    </style>

    <style name="btn_style" parent="@android:style/Widget.Button.Small">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/btn_round_bkg</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="progress_style" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal</item>
        <item name="android:maxHeight">2dp</item>
        <item name="android:minHeight">2dp</item>
        <item name="android:indeterminateOnly">false</item>
    </style>

    <style name="NoActionTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="addDownloadDialog" parent="android:Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <!-- 为了避免在有 NavigationBar 的手机上 Dialog 从 NavigationBar 底部上来。去掉 Dialog 的动画，使用 View 的动画。-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="AlivcDialog.Dialog" parent="android:style/Theme.Dialog">
        <!--背景颜色及和透明程度-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--是否去除标题 -->
        <item name="android:windowNoTitle">true</item>
        <!--是否去除边框-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否模糊-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="BottomCheckDialog" parent="android:Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@null
        </item><!-- 为了避免在有 NavigationBar 的手机上 Dialog 从 NavigationBar 底部上来。去掉 Dialog 的动画，使用 View 的动画。-->
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="barrage_switch_text_color" parent="@android:style/TextAppearance.Small">\
        <item name="android:textColor">@android:color/black</item>
    </style>
</resources>
